<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mike.powerhours.EditPlaylistActivity">

    <TextView
        android:id="@+id/edit_playlist_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="32dp" />

    <ListView
        android:id="@+id/playlist_tracks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
    </ListView>

    <Button
        android:text="Save Playlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="save_playlist"/>

    <Button
        android:text="Add Songs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="add_songs"/>

</LinearLayout>
